package array;

import java.util.Scanner;

public class vetor {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		
		
		int contador = 0;
		int numero = 0;
		
		int[] array = new int[15];
		System.out.println("Insira o numero que ira se repetir");
		numero = scanner.nextInt();
		
		for (int i = 0; i<array.length; i++) {
			System.out.println("Insirao termo " + (i+1) + " do vetor");
			array [i] = scanner.nextInt();
			if (array[i] == numero) {
					contador++;
				}
			}
				System.out.println("Seu numero se repetiu " + contador + " vezes");
		} 
	}
